# PropertyManager Docker Environment Variables
# Copy this to .env and modify values for your environment
# IMPORTANT: Never commit your actual .env file to version control!

# =============================================================================
# Database Configuration
# =============================================================================
DB_ROOT_PASSWORD=change_this_root_password
DB_NAME=property_management
DB_USER=propman
DB_PASSWORD=change_this_password

# =============================================================================
# Application Environment
# =============================================================================
# Options: development | production | docker
ENVIRONMENT=development

# =============================================================================
# Security Secrets (MUST be changed in production!)
# =============================================================================

# JWT Secret - Used for signing authentication tokens
# Generate with: openssl rand -hex 32
JWT_SECRET=change_this_to_a_very_long_random_string_in_production

# Session Cookie Key - Used for encrypting session cookies
# Generate with: openssl rand -hex 32
SESSION_COOKIE_KEY=change_this_session_key_in_production

# CSRF Secret - Used for CSRF token signing (defaults to JWT_SECRET if not set)
# Generate with: openssl rand -hex 32
CSRF_SECRET=change_this_csrf_secret_in_production

# =============================================================================
# Google OAuth Configuration (for Google Drive backup)
# =============================================================================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5001/api/google/callback

# =============================================================================
# Application URLs
# =============================================================================
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost:5001

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_SECONDS=900
